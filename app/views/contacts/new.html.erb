<div class="contact">
    <address>
        <div class="company_name"><p><%= Setting.get("company_name") %></p></div>
        <p><%= simple_format Setting.get("company_address").html_safe %></p>
        <p><%= Setting.get("email_receiver") %></p>
        <p><%= Setting.get("company_phone_number") %></p>
    </address>
</div>

<div class="contact">
  <%= form_for @contact do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.error_message_on :name %>

    <%= f.label :email %>
    <%= f.email_field :email, required: :required %>
    <%= f.error_message_on :email %>

    <%= f.label :topic %>
    <%= f.text_field :topic %>
    <%= f.error_message_on :topic %>

    <%= f.label :body %>
    <%= f.text_area :body, required: :required %>
    <%= f.error_message_on :body %>

    <%= f.submit %>
  <% end %>
</div>